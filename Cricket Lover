  <body>
    <div class="container">
      <h1>Bat Ball Stump Game</h1>
      <!-- Bat -->
      <button
        class="btn"
        onclick="
    let cumputerChoice = Math.random() * 3;
    let result;
    if(cumputerChoice > 0 && cumputerChoice < 1) {
      cumputerChoice = 'Bat';
    }
    else if(cumputerChoice > 1 && cumputerChoice <2){
      cumputerChoice = 'Ball';    }
    else{
      cumputerChoice = 'Stump';
    }
    
    //result
    if(cumputerChoice === 'Bat'){
      result = 'Result Tie';
    }
    else if(cumputerChoice === 'Ball'){
      result = 'You Won';
    }
    else{
      result = 'Cumputer Won';
    }
    
    alert(`You select : Bat \n Computer select : ${cumputerChoice} \n Result : ${result}`);
    
    "
      >
        Bat
      </button>

      <!-- ball -->
      <button
        class="btn"
        onclick="
    cumputerChoice = Math.random() * 3;
    // let result;
    if(cumputerChoice > 0 && cumputerChoice < 1) {
      cumputerChoice = 'Bat';
    }
    else if(cumputerChoice > 1 && cumputerChoice <2){
      cumputerChoice = 'Ball';    }
      else{
        cumputerChoice = 'Stump';
      }
    
    //result
    if(cumputerChoice === 'Bat'){
      result = 'Cumputer Won';
    }
    else if(cumputerChoice === 'Ball'){
      result = 'Result Tie';
    }
    else{
      result = 'You Won';
    }
    
    alert(`You select : Ball \n Computer select : ${cumputerChoice} \n Result : ${result}`);
    
    "
      >
        Ball
      </button>

      <!-- stump -->
      <button
        class="btn"
        onclick="
    cumputerChoice = Math.random() * 3;
    // let result;
    if(cumputerChoice > 0 && cumputerChoice < 1) {
      cumputerChoice = 'Bat';
    }
    else if(cumputerChoice > 1 && cumputerChoice <2){
      cumputerChoice = 'Ball';    }
      else{
        cumputerChoice = 'Stump';
      }
    
      //result
      if(cumputerChoice === 'Bat'){
        result = 'You Won';
    }
    else if(cumputerChoice === 'Ball'){
      result = 'Cumputer Won';
    }
    else{
      result = 'Result Tie';
    }
    
    alert(`You select : Stump \n Computer select : ${cumputerChoice} \n Result : ${result}`);
    
    "
      >
        Stump
      </button>
